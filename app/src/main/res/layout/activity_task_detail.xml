<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_task_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.taskr.taskr.TaskDetailActivity">

    <TextView
        android:id="@+id/taskName"
        android:text="Name"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/taskType"
        android:text="Manual"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskName"/>

    <TextView
        android:id="@+id/taskHours"
        android:text="Hours"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskType"/>

    <TextView
        android:text="Importance:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskImportance"
        android:layout_below="@+id/taskHours"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"/>

    <TextView
        android:text="Desirability:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskDesirability"
        android:layout_below="@+id/taskHours"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="10dp"/>

    <TextView
        android:text="Notes:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskNotes"
        android:layout_below="@+id/taskEnd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Start Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskStart"
        android:padding="10dp"
        android:layout_below="@+id/taskImportance"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Deadline:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskEnd"
        android:padding="10dp"
        android:layout_below="@+id/taskStart"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
